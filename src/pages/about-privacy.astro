---

import MainGridLayout from "../layouts/MainGridLayout.astro";

import { getEntry } from "astro:content";
import { render } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";

const aboutPost = await getEntry("spec", "about-privacy");

if (!aboutPost) {
	throw new Error("About & Privacy page content not found");
}

const { Content } = await render(aboutPost);
---
<MainGridLayout title="关于 & 隐私政策" description="了解 TianTian Blog 博主背景与技术分享理念，以及本站的隐私政策说明。包含网站数据收集、Cookie 使用、第三方服务集成等隐私保护措施详情。">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>
